<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.app.assurancevoituresanspermis" version="1.0.0">
    <name>assuranceVoitureSansPermis</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="3000"/>
	<platform name="android">
              <icon density="ldpi" src="www/img/assurance-voiture-sans-permis-icon-ldpi.png"/>
              <icon density="mdpi" src="www/img/assurance-voiture-sans-permis-icon-mdpi.png"/>
              <icon density="hdpi" src="www/img/assurance-voiture-sans-permis-icon-hdpi.png"/>
              <icon density="xhdpi" src="www/img/assurance-voiture-sans-permis-icon-xhdpi.png"/>
    </platform>
	<platform name="android">
    <!-- you can use any density that exists in the Android project -->
		<splash density="land-hdpi" src="www/img/assurance-voiture-sans-permis-hdpi-land.png"/>
		<splash density="land-ldpi" src="www/img/assurance-voiture-sans-permis-ldpi-land.png"/>
		<splash density="land-mdpi" src="www/img/assurance-voiture-sans-permis-mdpi-land.png"/>
		<splash density="land-xhdpi" src="www/img/assurance-voiture-sans-permis-xhdpi-land.png"/>

		<splash density="port-hdpi" src="www/img/assurance-voiture-sans-permis-hdpi-portrait.png"/>
		<splash density="port-ldpi" src="www/img/assurance-voiture-sans-permis-ldpi-portrait.png"/>
		<splash density="port-mdpi" src="www/img/assurance-voiture-sans-permis-mdpi-portrait.png"/>
		<splash density="port-xhdpi" src="www/img/assurance-voiture-sans-permis-xhdpi-portrait.png"/>
	</platform>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
